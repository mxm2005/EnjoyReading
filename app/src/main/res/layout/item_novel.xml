<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="100dp" android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical">
<TextView xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:id="@+id/id_item_list_title"
          android:text="title"
          android:padding="8dp"
          android:textSize="18sp"
          android:gravity="center_vertical"
          android:layout_height="54dp">
</TextView>
<TextView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:id="@+id/id_item_list_summary"
android:text="summary"
android:padding="8dp"
android:textSize="18sp"
android:gravity="center_vertical"
android:layout_height="54dp">
</TextView>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/sfss"
        android:layout_width="@dimen/text_margin"
        android:layout_height="match_parent"
        android:text="2019-10-9 12:22:35"></TextView>
    <TextView
        android:id="@+id/af"
        android:layout_width="100dp"
        android:paddingLeft="50dp"
        android:layout_height="match_parent"
        android:text="aaa"></TextView>
</LinearLayout>
</LinearLayout>