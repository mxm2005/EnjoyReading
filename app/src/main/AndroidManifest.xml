<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.mxm.myapplication">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_book"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity
            android:name=".activity_novel_list"
            android:label="@string/title_activity_novel_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".novel.NovelActivity">
        </activity>
        <activity android:name=".novel.NovelResultActivity"/>
        <activity android:name=".novel.NovelSectionChooseActivity"/>
        <activity android:name=".novel.NovelReadActivity"/>
        <activity android:name=".novel.BookMarkActivity"/>
    </application>

</manifest>